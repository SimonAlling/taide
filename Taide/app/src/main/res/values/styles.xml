<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:colorForeground">@color/colorPrimaryText</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>

        <item name="iconFile">@drawable/ic_file_white</item>
        <item name="iconFolder">@drawable/ic_folder_white</item>
        <item name="iconUpOneFileLevel">@drawable/ic_up_one_file_level_white</item>
        <item name="iconDropbox">@mipmap/ic_dropbox</item>

        <item name="actionNewProject">@drawable/ic_create_file_white</item>
        <item name="actionLoadProject">@drawable/ic_create_folder_white</item>
        <item name="actionImportProject">@mipmap/ic_dropbox</item>
        <item name="actionNewFile">@drawable/ic_create_file_white</item>
        <item name="actionNewFolder">@drawable/ic_create_folder_white</item>

        <item name="buttonColor">@color/colorPrimary</item>
        <item name="scrollButtonColor">@color/sandYellow</item>
        <item name="actionMenuColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.filesystem">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextViewDark" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
