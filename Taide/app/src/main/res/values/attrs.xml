<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RadialActionMenuLayout">
        <attr name="menuAlignment" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="buttonCount" format="integer" />
        <attr name="animationDuration" format="integer" />
        <attr name="selectionAnimationDuration" format="integer" />
        <attr name="buttonColor" format="reference" />
        <attr name="menuTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="actionMenuColor" format="reference|color" />
        <attr name="drawerBackground" format="reference|color" />
        <attr name="iconFile" format="reference" />
        <attr name="iconFolder" format="reference" />
        <attr name="iconUpOneFileLevel" format="reference" />
        <attr name="iconDropbox" format="reference" />

        <attr name="actionNewProject" format="reference" />
        <attr name="actionLoadProject" format="reference" />
        <attr name="actionImportProject" format="reference" />
        <attr name="actionNewFile" format="reference" />
        <attr name="actionNewFolder" format="reference" />
    </declare-styleable>

</resources>